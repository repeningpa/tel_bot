    stage("create docker image") {
      steps {
        echo " ========================= create docker image with app ==================="
        dir ('docker') {
          sh 'docker build -t go-web-app .'
        }
      }
    }
    stage("run docker") {
      steps {
        echo " ========================= run docker image ==================="
        dir ('docker') {
          sh 'docker run -it --main go-run-app go-web-app'
        }
      }
    }
  }
}
